include variables/var
doctype
html
  head
    meta(charset="utf-8")
    title create webpage with pug and sass
    include includes/styles
  body
    .container
      include includes/header
      article
        //- the features section
        section.features#features
          .con.test
            - for (var i in features)
              .feature
                i(class=fIcons[i])
                h3 #{features[i]}
                p Lorem ipsum dolor sit amet, consectetur adipisicing elit.
        section.subs#subs
          form(name="form", id="form")
            input(type="email" placeholder="type the email and submit to get our news letter")
            button(type="submit") submit now !
        section.works#works
          h1 our
            span  works
          p 
            .
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
          .con
            - for (var i in works)
              .box
                img(src=imgs[i])
                .overlay
                  h2 #{works[i]}
                  button(type="button") show more
      include includes/footer
    //- scroll to Top buttons
    
    include includes/scrollTop
    include includes/popUp
    script(src="js/jquery-3.5.1.js")
    script(src="js/master.js")
